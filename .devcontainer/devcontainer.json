// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Hello World Frontend",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "containerEnv": {
    "CHROME_BIN": "/usr/bin/chromium"
  },
  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers-extra/features/lefthook-asdf:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "pnpmVersion": "none",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers-extra/features/angular-cli:2": {
      "version": "17"
    },
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
      "plugins": "git zsh-autosuggestions zsh-syntax-highlighting fast-syntax-highlighting",
      "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-syntax-highlighting https://github.com/zdharma-continuum/fast-syntax-highlighting"
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    4200
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  "initializeCommand": "echo '{ \"path\": \"cz-conventional-commit-gitmoji\" }' > ~/.czrc",
  "postCreateCommand": "npm install -g git+ssh://git@github.com/ryuunosukeds3/git-standards.git && npm install -g commitizen@4 cz-conventional-commit-gitmoji @commitlint/cli@19 @commitlint/config-conventional commitlint-config-gitmoji conventional-changelog-gitmoji-config && lefthook install && npm install && wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | sudo apt-key add - && sudo sh -c 'echo \"deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main\" > /etc/apt/sources.list.d/google-chrome.list' && sudo apt-get update && sudo apt-get install -y chromium",
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "cSpell.enabled": true,
        "sonarlint.connectedMode.connections.sonarcloud": [
          {
            "organizationKey": "ryuunosukeds3"
          }
        ]
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "eamodio.gitlens",
        "SonarSource.sonarlint-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "hbenl.vscode-mocha-test-adapter",
        "angular.ng-template"
      ]
    }
  },
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root",
  "mounts": [
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.czrc",
      "target": "/home/node/.czrc",
      "type": "bind"
    }
  ]
}